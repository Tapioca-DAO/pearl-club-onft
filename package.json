{
  "name": "pearl-club-onft",
  "version": "1.0.0",
  "description": "Omnichain NFTs for Pearl club",
  "main": "hardhat.config.ts",
  "scripts": {
    "test": "npx hardhat test",
    "deploy:testnet": "npx hardhat deploy --tags onft --network goerli && npx npx hardhat deploy --tags onft --network fuji_avalanche",
    "connect:testnet": "npx hardhat setTrustedRemote --network goerli --dstchain fuji_avalanche && npx hardhat setTrustedRemote --network fuji_avalanche --dstchain goerli",
    "lint:ts": "eslint ./scripts ./tasks ./test ./*.ts --fix",
    "lint:sol": "prettier --write \"./contracts/**/*.sol\" && solhint \"./contracts/**/*.sol\" --fix",
    "lint": "yarn lint:ts && yarn lint:sol",
    "prepare": "husky install"
  },
  "license": "ISC",
  "dependencies": {
    "@nomicfoundation/hardhat-toolbox": "^2.0.1",
    "@nomiclabs/hardhat-etherscan": "^3.1.5",
    "@openzeppelin/contracts": "^4.8.1",
    "@primitivefi/hardhat-dodoc": "^0.2.3",
    "@types/inquirer": "^9.0.3",
    "@typescript-eslint/eslint-plugin": "^5.59.0",
    "@typescript-eslint/parser": "^5.59.0",
    "dotenv": "^16.0.3",
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^8.8.0",
    "eslint-plugin-prettier": "^4.2.1",
    "ethers": "^5.7.2",
    "fs": "^0.0.1-security",
    "hardhat": "^2.12.6",
    "hardhat-contract-sizer": "^2.7.0",
    "hardhat-deploy": "^0.11.22",
    "hardhat-gas-reporter": "^1.0.9",
    "husky": "^8.0.3",
    "inquirer": "^8.2.5",
    "keccak256": "^1.0.6",
    "merkletreejs": "^0.3.9",
    "prettier": "^2.8.3",
    "prettier-plugin-solidity": "^1.1.1",
    "random-words": "^1.3.0",
    "solhint": "^3.3.8",
    "solidity-coverage": "^0.8.2",
    "tapioca-sdk": "^1.3.93",
    "ts-node": "^10.9.1",
    "typechain": "^8.1.1",
    "typescript": "^4.9.4",
    "write-json-file": "^5.0.0"
  },
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^1.0.0",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.0",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@typechain/ethers-v5": "^10.1.0",
    "@typechain/hardhat": "^6.1.2",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "chai": "^4.2.0",
    "hardhat-preprocessor": "^0.1.5",
    "operator-filter-registry": "^1.4.1"
  }
}
